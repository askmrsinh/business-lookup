{
  "name": "business-lookup",
  "version": "0.0.1",
  "description": "Express Node TS project for business lookup API",
  "scripts": {
    "start": "tsc && npx mikro-orm migration:fresh && npx mikro-orm seeder:run && node dist/server",
    "start:dev": "tsc-watch --onSuccess \"node dist/server\"",
    "start:prod": "tsc && node dist/server",
    "test": "jest --silent",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@mikro-orm/better-sqlite": "^6.0.0",
    "@mikro-orm/core": "^6.0.0",
    "@mikro-orm/sql-highlighter": "^1.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv-expand": "^11.0.6",
    "express": "^4.21.0",
    "express-promise-router": "^4.1.1",
    "helmet": "^7.1.0",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0",
    "reflect-metadata": "^0.2.2",
    "tsc-watch": "^6.0.4",
    "typescript": "5.3.3"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/js": "^9.10.0",
    "@faker-js/faker": "^9.0.0",
    "@jest/types": "^29.6.3",
    "@mikro-orm/cli": "^6.0.0",
    "@mikro-orm/migrations": "^6.3.9",
    "@mikro-orm/seeder": "^6.3.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "29.5.12",
    "@types/node": "20.11.24",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.10.0",
    "globals": "^15.9.0",
    "jest": "29.7.0",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.3.3",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.5.0"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./app/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  }
}
